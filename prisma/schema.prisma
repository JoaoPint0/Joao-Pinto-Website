// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
    provider = "prisma-client-js"
}

datasource db {
  provider     = "mysql"
  url          = env("DATABASE_URL")
  relationMode = "prisma"
}

model Blog {
    id        String   @id @default(cuid())
    createdAt DateTime @default(now())

    url String 
    title String
    description String 
}

model Project {
    id        String   @id @default(cuid())
    createdAt DateTime @default(now())

    url String 
    title String
    description String

    websiteLink String?
    androidLink String?
    iosLink String?
}
